<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%date [%-5level] %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="uz" level="debug"/>

    <root level="WARN">
        <appender-ref ref="console"/>
    </root>

</configuration>